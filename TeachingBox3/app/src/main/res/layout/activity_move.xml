    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#1f1f1f"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:background="#4c74e7"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:background="#ffffff">

                <Button
                    android:id="@+id/joint_min"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/blue_all_small"
                    android:text="-"
                    android:textColor="#ffffff" />

                <com.example.teachingbox3.QNumberPicker
                    android:id="@+id/numberpicker"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="1dp"
                    android:background="#4c74e7"
                    android:gravity="center">

                </com.example.teachingbox3.QNumberPicker>

                <Button
                    android:id="@+id/joint_max"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/blue_all_small"
                    android:text="+"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="fill_parent"
            android:background="#ffffff">
        </LinearLayout>

        <LinearLayout
            android:layout_width="620dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/joint_left_bottom"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="#4c74ec"
                android:gravity="center"
                android:text="0.0"
                android:textColor="#ffffff" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/seekbar_color"
                android:thumb="@animator/seekbar_thumb" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/seekbar_color"
                android:thumb="@animator/seekbar_thumb" />

            <SeekBar
                android:id="@+id/seekBar3"
