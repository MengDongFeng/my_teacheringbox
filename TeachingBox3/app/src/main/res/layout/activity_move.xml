                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="1dp"
                android:background="@drawable/black_small"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Y_MIN"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="1dp"
                android:background="@drawable/black_small"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
