        android:layout_height="250dp"
        android:layout_marginTop="-500dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:gravity="left"
                android:text="X"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:gravity="left"
                android:text="Y"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:gravity="left"
                android:text="Z"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:gravity="left"
                android:text="α"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:gravity="left"
                android:text="β"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:gravity="left"
                android:text="γ"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/x"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/y"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/z"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rx"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ry"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rz"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left"
                android:textColor="#0f0f0f"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Record_begin"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_margin="5dp"
                    android:text="开始"
                    android:textColor="#ffffff"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/Record_end"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_margin="5dp"
                    android:text="结束"
                    android:textColor="#ffffff"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/Record_point"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_margin="5dp"
                    android:text="记录"
                    android:textColor="#ffffff"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/Record_process"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_margin="5dp"
                    android:text="执行"
                    android:textColor="#ffffff"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/Record_pause"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_margin="5dp"
                    android:text="暂停"
                    android:textColor="#ffffff"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/Record_stop"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_margin="5dp"
                    android:text="停止"
                    android:textColor="#ffffff"
                    android:textSize="26sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/Reset"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_edittext"
                android:text="复位"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/Send"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:text="发送"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/Fixture"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/jiajukuang"
                android:text="夹具"
                android:textColor="#000000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/Fixture_gone"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/jiajukuang"
                android:text="无夹具"
                android:textColor="#000000"
                android:textSize="25sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/Fixture_hand"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/jiajukuang"
                android:text="夹手"
                android:textColor="#000000"
                android:textSize="25sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
